{
  "extends": "./tsconfig.app.json",
  "include": [
    "src/**/*.{test,spec}.{js,jsx,ts,tsx}",
    "tests/**/*.ts",
    "src/test-utils/**/*",
    "src/features/**/*",
    "src/shared/**/*",
    "src/views/**/*",
    "env.d.ts"
  ],
  "exclude": [],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.vitest.tsbuildinfo",

    "lib": [],
    "types": ["node", "jsdom", "vitest/globals"],
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    }
  }
}
